pipeline {
    agent any
    parameters {
        string(name: 'GIT_TAG', defaultValue: '', description: 'Git tag selected via dropdown')
    }
    stages {
        stage('Clone and Checkout') {
            steps {
                script {
                    sh """
                    git clone https://github.com/lohith21/course-jenkins-project.git
                    cd repo
                    git checkout tags/${params.GIT_TAG}
                    """
                }
            }
        }
    }
}